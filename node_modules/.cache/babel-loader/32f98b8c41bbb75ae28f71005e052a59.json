{"ast":null,"code":"export default {\n  data() {\n    return {\n      addTask: '',\n      editTaskIndex: null,\n      statusList: ['to-do', 'in-prgress', 'finished'],\n      tasks: [{\n        name: 'Cycling',\n        status: 'to-do'\n      }, {\n        name: 'Study',\n        status: 'to-do'\n      }, {\n        name: 'Shopping',\n        status: 'to-do'\n      }]\n    };\n  },\n\n  methods: {\n    submitTask() {\n      console.log(this.editTaskIndex);\n\n      if (this.editTaskIndex === null) {\n        if (this.addTask.length != 0) {\n          this.tasks.push({\n            name: this.addTask,\n            status: 'to-do'\n          });\n          console.log('taskadded');\n        }\n      } else {\n        this.tasks[this.editTaskIndex].name = this.addTask;\n        this.editTaskIndex = null;\n        console.log('entered else');\n      }\n\n      this.addTask = '';\n      console.log('cleared outside');\n    },\n\n    deleteTask(index) {\n      this.tasks.splice(index, 1);\n    },\n\n    taskEdit(index) {\n      this.addTask = this.tasks[index].name, this.editTaskIndex = index;\n      console.log(this.editTaskIndex);\n    },\n\n    changeStatus(index) {\n      let newIndex = this.statusList.indexOf(this.tasks[index].status);\n\n      if (++newIndex > 2) {\n        newIndex = 0;\n      }\n\n      console.log(this.statusList[newIndex]);\n      this.tasks[index].status = this.statusList[newIndex];\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA0DA,eAAe;EACbA,IAAI,GAAE;IACJ,OAAM;MAGJC,OAAO,EAAE,EAHL;MAIJC,aAAa,EAAE,IAJX;MAKJC,UAAS,EAAI,CAAC,OAAD,EAAS,YAAT,EAAsB,UAAtB,CALT;MAMJC,KAAK,EAAE,CACL;QACIC,IAAG,EAAG,SADV;QAEIC,MAAK,EAAI;MAFb,CADK,EAKL;QACID,IAAG,EAAG,OADV;QAEIC,MAAK,EAAI;MAFb,CALK,EASL;QACID,IAAG,EAAG,UADV;QAEIC,MAAK,EAAI;MAFb,CATK;IANH,CAAN;EAsBD,CAxBY;;EAyBbC,OAAO,EAAE;IACPC,UAAU,GAAE;MAEbC,OAAO,CAACC,GAAR,CAAY,KAAKR,aAAjB;;MAEA,IAAG,KAAKA,aAAL,KAAsB,IAAzB,EAA8B;QAC3B,IAAG,KAAKD,OAAL,CAAaU,MAAb,IAAqB,CAAxB,EACA;UACE,KAAKP,KAAL,CAAWQ,IAAX,CAAgB;Y